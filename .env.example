cat > .env.example <<'EOF'
# ===== Base de données =====
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/plantalys?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=myuser
SPRING_DATASOURCE_PASSWORD=secret

# ===== Profils Spring =====
SPRING_PROFILES_ACTIVE=prod

# ===== Uploads =====
UPLOADS_DIR=/app/uploads

# ===== Sécurité / JWT =====
JWT_SECRET=change-me
JWT_EXPIRATION=86400000

# ===== OAuth2 Google =====
GOOGLE_CLIENT_ID=change-me
GOOGLE_CLIENT_SECRET=change-me

# ===== SMTP =====
EMAIL_USER=change-me
EMAIL_PASSWORD=change-me

# ===== Stripe / PayPal / autres =====
STRIPE_API_SECRETKEY=change-me
PAYPAL_CLIENT_ID=change-me
PAYPAL_SECRET=change-me
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com

# ===== Front redirect =====
APP_FRONTEND_REDIRECT_URI=http://localhost:3001/oauth2/redirect

# ===== API externes =====
PLANT_ID_API_KEY=change-me
EOF

# s'assurer que le dossier uploads est versionné (vide)
mkdir -p uploads
[ -f uploads/.gitkeep ] || touch uploads/.gitkeep
